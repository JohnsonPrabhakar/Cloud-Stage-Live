
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own profile and tickets
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      match /tickets/{ticketId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Artists can read/write their own profile
    match /artists/{artistId} {
      allow read, write: if request.auth != null && request.auth.uid == artistId;
    }

    // Events can be read by anyone, only written by the artist who created them
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // Movies can be read by anyone, but only written by an authenticated user (admin in app logic)
    match /movies/{movieId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Other collections are admin/app-logic controlled
    match /artistApplications/{applicationId} {
      allow read, write: if request.auth != null;
    }

    match /tickets/{ticketId} {
       allow read, write: if request.auth != null;
    }
  }
}
